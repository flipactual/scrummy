    "eslint": "^2.10.2",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.0",
    "nyc": "^6.4.4",
    "write-good": "^0.9.1"
  },
  "dependencies": {
    "config": "^1.20.4",
    "ws": "^1.1.0"
